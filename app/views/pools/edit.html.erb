<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit Pool:</h3>
        <%= simple_form_for @pool, url: pool_path(@pool), method: :patch do |f| %>
          <%= f.input :title, placeholder: 'Edit pool name' %>
          <%= f.input :description, placeholder: 'Edit Pool Description', hint: 'Min 16 characters.' %>
          <%= f.input :address, placeholder: 'Edit pool address' %>
          <%= f.input :price, as: :float, hint: 'eg. 89.59', label: 'Price per hour' %>
          <%= f.input :capacity, collection: 1..20 %>
          <%= f.input :photo, as: :file %>
          <%= f.submit 'Update Pool', class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
