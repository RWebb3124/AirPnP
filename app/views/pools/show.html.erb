<div class="container show-container">
  <div class="row">
    <div class="col">
    <h1><%= @pool.title %></h1>
      <div class=container-img>
      <img src="https://housing.com/news/wp-content/uploads/2023/03/10-Vastu-based-swimming-pool-ideas-for-home-construction-09.png" />
    </div>
    <div class= container-text>
      <div class= "col">
        <p><%= @pool.description %></p>
         <%#Insert map into this gap%>
         <p><strong><%= @pool.address %></strong></p>
        <h5><strong>Capacity:</strong> <%= @pool.capacity %> people</h5>
        <h2>Price per hour: â‚¬<%= @pool.price %></h3>
        </div>
        </div>
        <div class= "container-btn">
          <div class="col">
          <div class="d-grid gap-2 d-md-block">
            <%= link_to "Book pool", new_pool_booking_path, class: "btn btn-success" %>
            <%= link_to "Back to search", pools_path, class: "btn btn-primary" %>
          </div>
        </div>
       </div>
      </div>
    </div>
  </div>
</div>
<ul>
  <% if @pool.reviews.any? %>
    <h2> All reviews for <%= @pool.title %> </h2>
    <% @pool.reviews.each do |review| %>
      <li>
        <h3><%= review.title %></h3>
        <p>Rating: <%= review.rating %></p>
        <p><%= review.content %></p>
      </li>
    <% end %>
  <% else %>
    <p>No reviews yet for this pool. Be the first to leave one!</p>
  <% end %>
</ul>
