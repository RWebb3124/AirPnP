<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="form mary rounded p-3 shadow">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions d-flex justify-content-between">
            <%= f.button :submit, "Log in", class: 'btn-form' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn-secondary' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn-secondary' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
