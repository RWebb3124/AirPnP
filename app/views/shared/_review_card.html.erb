<% if @pool.reviews.present? %>
  <h2>All reviews for <%= @pool.title %></h2>
  <% average_rating = @pool.reviews.average(:rating)&.round(2) || 0.0 %>
  <% if average_rating > 0.0 %>
    <i class="fas fa-star star-blue"></i><%= average_rating %>
  <%end%>
  <% @pool.reviews.each do |review| %>
    <div class="review-card">
      <div class="review-header">
        <div class="review-title"><%= review.title %></div>
        <div class="review-author-rating">
          <span class="review-author"><%= review.booking.user.first_name %> <%= review.booking.user.last_name %></span>
          <span class="review-rating">
            <% review.rating.times do %>
              <i class="fas fa-star star-blue"></i>
            <% end %>
          </span>
        </div>
      </div>
      <div class="review-content"> <p> <%= review.content %> <p> </div>
      <div class="review-post-time"><em> <%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></div>
    </div>
  <% end %>
<% else %>
  <p>Be the first one to review this pool!</p>
<% end %>
