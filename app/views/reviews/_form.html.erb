<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <%= simple_form_for([@booking, @review]) do |f| %>
          <%= f.input :title, placeholder: "Give your review a title..." %>
          <%= f.input :content, placeholder: "Add your review here..." %>
          <%= f.input :rating, :collection => 0..5, required: true, prompt: "What's your rating?" %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
